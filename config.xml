<?xml version='1.0' encoding='utf-8'?>
<widget id="com.bridgewinners.mobile" version="0.0.1" android-versionCode="7" ios-CFBundleVersion="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Bridge Winners</name>
    <description>
       The Bridge Winners Mobile App
    </description>
    <author email="indianbridge@gmail.com" href="http://bridgewinners.com">
        Bridge Winners Mobile app Team
    </author>
    <content src="index.html" />
    <access origin="*" />
	<icon src="res/icon.png" />
	<preference name="LoadingDialog" value="Please wait for Bridge Winners Awesomeness to begin..."/>
	<preference name="AutoHideSplashScreen" value="false" />
	<preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />
    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarBackgroundColor" value="#000000" />
    <preference name="StatusBarStyle" value="lightcontent" />
	<platform name="android">
		<icon src="res/android/drawable-hdpi/Icon.png" density="hdpi" />
		<icon src="res/android/drawable-ldpi/Icon.png" density="ldpi" />
		<icon src="res/android/drawable-mdpi/Icon.png" density="mdpi" />
		<icon src="res/android/drawable-xhdpi/Icon.png" density="xhdpi" />
		<icon src="res/android/drawable-xxhdpi/Icon.png" density="xxhdpi" />
		<icon src="res/android/drawable-xxxhdpi/Icon.png" density="xxxhdpi" />
		<!-- you can use any density that exists in the Android project -->
		<splash src="res/android/drawable-hdpi/splash.png" density="land-hdpi"/>
		<splash src="res/android/drawable-ldpi/splash.png" density="land-ldpi"/>
		<splash src="res/android/drawable-mdpi/splash.png" density="land-mdpi"/>
		<splash src="res/android/drawable-xhdpi/splash.png" density="land-xhdpi"/>

		<splash src="res/android/drawable-hdpi/splash.png" density="port-hdpi"/>
		<splash src="res/android/drawable-ldpi/splash.png" density="port-ldpi"/>
		<splash src="res/android/drawable-mdpi/splash.png" density="port-mdpi"/>
		<splash src="res/android/drawable-xhdpi/splash.png" density="port-xhdpi"/>		
	</platform>
	<platform name="ios">
		<!-- iOS 8.0+ -->
		<!-- iPhone 6 Plus  -->
		<icon src="res/ios/icon-60@3x.png" width="180" height="180" />
		<!-- iOS 7.0+ -->
		<!-- iPhone / iPod Touch  -->
		<icon src="res/ios/icon-60.png" width="60" height="60" />
		<icon src="res/ios/icon-60@2x.png" width="120" height="120" />
		<!-- iPad -->
		<icon src="res/ios/icon-76.png" width="76" height="76" />
		<icon src="res/ios/icon-76@2x.png" width="152" height="152" />
		<!-- iOS 6.1 -->
		<!-- Spotlight Icon -->
		<icon src="res/ios/icon-40.png" width="40" height="40" />
		<icon src="res/ios/icon-40@2x.png" width="80" height="80" />
		<!-- iPhone / iPod Touch -->
		<icon src="res/ios/icon.png" width="57" height="57" />
		<icon src="res/ios/icon@2x.png" width="114" height="114" />
		<!-- iPad -->
		<icon src="res/ios/icon-72.png" width="72" height="72" />
		<icon src="res/ios/icon-72@2x.png" width="144" height="144" />
		<!-- iPhone Spotlight and Settings Icon -->
		<icon src="res/ios/icon-small.png" width="29" height="29" />
		<icon src="res/ios/icon-small@2x.png" width="58" height="58" />
		<!-- iPad Spotlight and Settings Icon -->
		<icon src="res/ios/icon-small-50.png" width="50" height="50" />
		<icon src="res/ios/icon-small-50@2x.png" width="100" height="100" />
		
		<!-- images are determined by width and height. The following are supported -->
		<splash src="res/ios/Default.png" width="320" height="480"/>
		<splash src="res/ios/Default@2x.png" width="640" height="960"/>
		<splash src="res/ios/Default-Portrait.png" width="768" height="1024"/>
		<splash src="res/ios/Default-Portrait-2048h.png" width="1536" height="2048"/>
		<splash src="res/ios/Default-Landscape.png" width="1024" height="768"/>
		<splash src="res/ios/Default-Landscape@2x.png" width="2048" height="1536"/>
		<splash src="res/ios/Default-568h@2x.png" width="640" height="1136"/>	
	</platform>	
</widget>
